# DigitalJamath Environment Variables
# Copy this file to .env and fill in the values
# Version: 2.0.0

# ============================================
# General Settings
# ============================================
DOMAIN_NAME=localhost
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-prod
ALLOWED_HOSTS=localhost,127.0.0.1,digitaljamath.com,*.digitaljamath.com
APP_VERSION=2.0.0

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_NAME=digitaljamath_db
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_HOST=db
DATABASE_PORT=5432

# ============================================
# Redis & Celery (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# Email (Brevo / Sendinblue SMTP)
# ============================================
# Sign up at https://www.brevo.com/
# Get SMTP credentials from: Settings > SMTP & API > SMTP
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
BREVO_EMAIL_USER=your-id@smtp-brevo.com
BREVO_SMTP_KEY=your-brevo-smtp-key-here
DEFAULT_FROM_EMAIL=noreply@digitaljamath.com

# Alternative: Use console backend for development (no emails sent)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ============================================
# Telegram Bot (Member Portal Login & Notifications)
# ============================================
# Create a bot via @BotFather: https://t.me/BotFather
# Required for: OTP delivery, payment reminders, announcements
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=YourJamathBot

# ============================================
# AI/Basira Settings (Optional)
# ============================================
# Get API key from https://openrouter.ai/
# Powers: Basira AI Guide, Data Agent
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key

# ============================================
# reCAPTCHA v2 (Optional - Spam Protection)
# ============================================
# Get keys from https://www.google.com/recaptcha/admin
# Used on registration and password reset forms
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# ============================================
# Frontend URL (for email links)
# ============================================
# Use your domain in production
FRONTEND_URL=http://localhost:5173
